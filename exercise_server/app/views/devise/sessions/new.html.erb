<div class="flex flex-col h-full w-full items-center justify-center bg-gradient-to-tr from-teal-600 via-cyan-500 to-indigo-400">
  <h1 class="text-4xl text-white mb-8">Ledger Exercise</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex flex-col gap-4 rounded-md bg-sky-100/30 p-4 min-w-sm shadow-lg">
      <% if notice = flash.notice %>
        <p class="bg-amber-500 rounded-sm font-medium text-white p-2"><%= notice %></p>
      <% end %>

      <% if alert = flash.alert %>
        <p class="bg-red-500 rounded-sm font-medium text-white p-2"><%= alert %></p>
      <% end %>

      <div>
        <%= f.label :email, class: "block font-medium mb-2 text-black/95 sr-only" %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address (test@test.com)", class: "block w-full rounded-sm p-2 bg-white/50 focus:bg-white" %>
      </div>

      <div>
        <%= f.label :password, class: "block font-medium mb-2 text-black/95 sr-only" %>
        <%= f.password_field :password, placeholder: "Password (password)", class: "block w-full rounded-sm p-2 bg-white/50 focus:bg-white" %>
      </div>

      <div>
        <%= f.submit "Log in", class: "w-full bg-sky-600/70 text-white font-semibold rounded-sm p-2 pointer-cursor active:bg-sky-600" %>
      </div>
    </div>
  <% end %>
</div>